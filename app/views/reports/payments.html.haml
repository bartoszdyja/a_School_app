- breadcrumb :payments

%table.table.table-condensed#payments_list
  %thead
    %tr
      %th= t('student.columns.first_name')
      %th= t('student.columns.last_name')
      %th= t('student.columns.balance')
      %th= t('student.columns.payment_date')
  %tbody
    -students.each do |student|
      %tr
        %td= student.first_name
        %td= student.last_name
        -if student.payment
          %td= student.payment.balance
          %td= student.payment.payment_date

